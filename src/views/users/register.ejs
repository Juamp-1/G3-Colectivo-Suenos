<!DOCTYPE html>
<html lang="es">
    

	<%- include('../partials/head',{
		title : 'Registro de Sesión'
	}) %>
	<body class="register-body">
		<div class="container"> <!-- Contenedor ppal -->
			<%- include('../partials/header') %> <form method="POST">
               <div class="register-main-content">
                <main class="card" style="max-width: 600px;"> <!-- Cuerpo principal del sitio -->
                    <section class="card-header">
                        Registrate
                    </section>		
                    <section class="card-body">
                                        <form class="access-form" method="POST"> <!--Abre formulario -->
                          <!-- input Nombre -->
                                <div class="field-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" id="name" name="name" placeholder="Ingresá tu nombre" value="<%= locals.old && old.name ? old.name : null %>" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>">
                                    <small id="name-error" class="text-danger ms-2" ><%= (locals.errors && errors.name) ? errors.name.msg : null %></small>
    
                                </div>
                          <!-- input Email -->
                          <div class="field-group">
                              <label for="email">Email</label>
                                    <input type="text" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" name="email" placeholder="Ingresá tu email" value="<%= locals.old && old.email ? old.email : null %>">
                                    <small id="email-error" class="text-danger ms-2" ><%= (locals.errors && errors.email) ? errors.email.msg : null %></small>
    
                          </div>
                                <div class="field-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" id="passsword" name="password" placeholder="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>">
                                    <small id="password-error" class="text-danger ms-2" ><%= (locals.errors && errors.password) ? errors.password.msg : null %></small>
    
                                </div>
                                <div class="field-group">
                                    <label for="password2">Reingresá la contraseña</label>
                                    <input type="password" id="passsword" name="password2" placeholder="Reingrese la contraseña" class="form-control <%= locals.errors && errors.password2 ? 'is-invalid' : null %>">
                                    <small id="password2-error" class="text-danger ms-2" ><%= (locals.errors && errors.password2) ? errors.password2.msg : null %></small>
    
                                </div>
    
                            
                            
    
    
                                <div class="field-group remember-me">
                                    <input type="checkbox" id="terms" name="terms" value="">
                                    <label for="terms">Acepto bases y condiciones</label>
                                    <small id="terms-error" class="text-danger ms-2" ><%= (locals.errors && errors.terms) ? errors.terms.msg : null %></small>
                                </div>
    
                          
                          <button type="submit"><strong>Registrarme</strong></button>
    
                        </form>
                    </section>
                </main>
            </div>
        </div>
<%- include('../partials/footer') %>

</body>
</html>